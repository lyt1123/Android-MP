<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:layout_width="102dp"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/select_terminalstate_shape"
            android:drawableRight="@drawable/login_phone"
            android:paddingRight="10dp"
            android:text="全部" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:background="@drawable/terminalsearch_shape"
            android:drawableLeft="@drawable/login_phone"
            android:drawablePadding="5dp"
            android:hint="请输入完整的终端SN号"
            android:paddingLeft="15dp"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:text="搜索"
            android:textColor="#2986FE"
            android:textSize="16dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/terminalmanager_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
