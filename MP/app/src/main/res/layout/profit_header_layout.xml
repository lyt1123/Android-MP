<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profit_header"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_profit_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/month_profit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="72dp"
        android:text="本月分润"
        android:textColor="#fff"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/month_profit_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="8926.98"
        android:textColor="#fff"
        android:textSize="26dp"
        app:layout_constraintLeft_toLeftOf="@+id/month_profit_title"
        app:layout_constraintTop_toBottomOf="@+id/month_profit_title" />

    <Button
        android:layout_width="68dp"
        android:layout_height="24dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/profit_more_btn"
        android:text="更多"
        android:textColor="#03a4da"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/profit_header"
        app:layout_constraintRight_toRightOf="@+id/profit_header" />

</androidx.constraintlayout.widget.ConstraintLayout>
