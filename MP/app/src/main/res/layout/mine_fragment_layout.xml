<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:gravity="center">

    <ImageView
        android:id="@+id/mine_header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/mine_head_bg"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mine_userheader"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="67dp"
        android:src="@drawable/mine_userheader"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/mine_username"
        app:layout_constraintLeft_toRightOf="@+id/mine_userheader"
        android:layout_marginLeft="17dp"
        app:layout_constraintTop_toTopOf="@id/mine_userheader"
        android:layout_marginTop="5dp"
        android:text="张晓云"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mine_userno"
        app:layout_constraintLeft_toLeftOf="@+id/mine_username"
        app:layout_constraintTop_toBottomOf="@+id/mine_username"
        android:layout_marginTop="10dp"
        android:text="8012366123"
        android:textColor="#fff"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/mine_money_bg"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="143dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/mine_money_bg_shape"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mien_moneytitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="161dp" />

    <TextView
        android:id="@+id/mine_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/mine_header"
        tools:layout_editor_absoluteX="38dp" />

    <Button
        android:id="@+id/mine_lookbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="161dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
