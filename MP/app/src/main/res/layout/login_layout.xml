<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/login_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/login_logo" />

    <EditText
        android:id="@+id/phone_et"
        app:layout_constraintTop_toBottomOf="@id/login_logo"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@drawable/edittext_phone_shape"
        android:elevation="5dp"
        android:hint="手机号"
        android:drawableLeft="@mipmap/login_phone"
        android:paddingLeft="20dp"
        android:drawablePadding="20dp"/>

    <EditText
        android:id="@+id/psd_et"
        app:layout_constraintTop_toBottomOf="@id/phone_et"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@drawable/edittext_phone_shape"
        android:elevation="5dp"
        android:hint="密码"
        android:drawableLeft="@mipmap/login_psd"
        android:paddingLeft="20dp"
        android:drawablePadding="20dp"/>

    <Button
        android:id="@+id/forgetpsd_btn"
        app:layout_constraintTop_toBottomOf="@+id/psd_et"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="@+id/psd_et"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="忘记密码？"
        android:background="#ffffff"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@+id/psd_et"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="登录"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/btn_login_shape" />


    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/icon_weibo"/>

<!--    <TextView-->
<!--        android:id="@+id/quickLogin"-->
<!--        android:layout_marginTop=""-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"/>-->


</androidx.constraintlayout.widget.ConstraintLayout>
