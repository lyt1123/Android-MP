<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/login_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phone_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_phone_shape"
        android:drawableLeft="@drawable/login_phone"
        android:drawablePadding="20dp"
        android:elevation="5dp"
        android:hint="手机号"
        android:paddingLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_logo" />

    <EditText
        android:id="@+id/psd_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_phone_shape"
        android:drawableLeft="@drawable/login_psd"
        android:drawablePadding="20dp"
        android:elevation="5dp"
        android:hint="密码"
        android:paddingLeft="20dp"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_et" />

    <Button
        android:id="@+id/forgetpsd_btn"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:background="@null"
        android:text="忘记密码？"
        app:layout_constraintRight_toRightOf="@+id/psd_et"
        app:layout_constraintTop_toBottomOf="@+id/psd_et" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="66dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_login_shape"
        android:text="登录"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/psd_et" />


    <Button
        android:id="@+id/btn_weibo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/icon_weibo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_wechat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/icon_wechat"
        app:layout_constraintBottom_toBottomOf="@id/btn_weibo"
        app:layout_constraintRight_toLeftOf="@id/btn_weibo" />

    <Button
        android:id="@+id/btn_qq"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/icon_qq"
        app:layout_constraintBottom_toBottomOf="@id/btn_weibo"
        app:layout_constraintLeft_toRightOf="@+id/btn_weibo" />

    <TextView
        android:id="@+id/quickLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="快捷登录"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_weibo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="@+id/quickLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/quickLogin"
        app:layout_constraintTop_toTopOf="@+id/quickLogin"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="@+id/quickLogin"
        app:layout_constraintLeft_toRightOf="@id/quickLogin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/quickLogin" />


</androidx.constraintlayout.widget.ConstraintLayout>
